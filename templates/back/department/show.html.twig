{% extends 'base_admin.html.twig' %}
{% block menu_department %} active {% endblock %}

{% block title %}Department{% endblock %}

{% block body %}
    <h1>Department</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ department.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ department.name }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ department.createdAt ? department.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ department.updatedAt ? department.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-warning" href="{{ path('department_index') }}">back to list</a>

    <a class="btn btn-primary" href="{{ path('department_edit', {'id': department.id}) }}">edit</a>

    {{ include('back/department/_delete_form.html.twig') }}
{% endblock %}
