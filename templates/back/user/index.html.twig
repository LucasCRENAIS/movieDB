{% extends 'base_admin.html.twig' %}
{% block menu_users %} active {% endblock %}

{% block body %}
    <h1>Users index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>
                    <a class="btn btn-secondary m-1" href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a class="btn btn-primary m-1" href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success m-1" href="{{ path('user_new') }}">Create new</a>
    <a class="btn btn-warning m-1" href="{{ path('back_admin') }}">Retour Ã  la page administration</a>
{% endblock %}
