{% extends 'base_admin.html.twig' %}
{% block menu_movie %} active {% endblock %}

{% block title %}{{ movie.title }}{% endblock %}

{% block body %}
    <h1>{{ movie.title }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ movie.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ movie.title }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ movie.createdAt ? movie.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ movie.updatedAt ? movie.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <h2>Liste des genres associ√©s</h2>

    <ul class="list-group list-group-flush">
    {% for genre in movie.genres %}
        <li class="list-group-item">{{ genre.name }}</li>
    {% endfor %}
    </ul>

    <br>

    <h2>Liste des acteurs</h2>

    <ul class="list-group list-group-flush">
    {% for casting in movie.castings %}
        <li class="list-group-item">{{ casting.role }} : {{ casting.person.name }}</li>
    {% endfor %}
    </ul>

    <br>

    <a class="btn btn-warning" href="{{ path('movie_index') }}">back to list</a>

    <a class="btn btn-primary" href="{{ path('movie_edit', {'id': movie.id}) }}">edit</a>

    {{ include('back/movie/_delete_form.html.twig') }}
{% endblock %}
